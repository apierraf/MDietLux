<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mdietlux.ui.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" />
    <activity
        android:id="@+id/onBoardingApp"
        android:name="com.example.mdietlux.ui.onboarding.OnBoardingApp"
        android:label="OnBoardingApp" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.mdietlux.ui.welcome.WelcomeFragment"
        android:label="@string/welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_onBoardingApp"
            app:destination="@id/onBoardingApp" />
    </fragment>

</navigation>